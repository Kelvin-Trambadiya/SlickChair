# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                    controllers.chair.Doc.umentation

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                        controllers.Assets.at(path="/public", file)

# Submitters
GET     /submission/make                     controllers.Submitting.make
POST    /submission/domake                   controllers.Submitting.doMake
GET     /submission/info/:id                 controllers.Submitting.info(id: models.IdType)
GET     /submission/edit/:id                 controllers.Submitting.edit(id: models.IdType)
POST    /submission/doedit/:id               controllers.Submitting.doEdit(id: models.IdType)

# Reviewers
# GET     /invitation/:token                   controllers.member.Dashboard.invite(token: String)
# GET     /dashboard                           controllers.member.Dashboard.papers
# GET     /submissions                         controllers.member.Reviewing.papers
# GET     /bid                                 controllers.member.Bidding.form
# POST    /bid                                 controllers.member.Bidding.make
# GET     /submission/:id                      controllers.member.Reviewing.page(id: Int)
# POST    /submission/:id                      controllers.member.Reviewing.comment(id: Int)
# GET     /review/:id                          controllers.member.Reviewing.form(id: Int)
# POST    /review/:id                          controllers.member.Reviewing.make(id: Int)

# Chair
GET     /sql                                 controllers.chair.Sql.form
POST    /sql                                 controllers.chair.Sql.runQuery
# GET     /email                               controllers.chair.Emailing.form
# POST    /email                               controllers.chair.Emailing.send
# GET     /manage-members                      controllers.chair.MembersManaging.page
# POST    /manage-members                      controllers.chair.MembersManaging.handle

# GET     /auctions                            controllers.chair.Chair.auctions
# GET     /config                              controllers.chair.Chair.config
# GET     /decisions                           controllers.chair.Chair.decisions
# GET     /dashboard                           controllers.chair.Chair.dashboard

# SecureSocial
GET     /login                  securesocial.controllers.LoginPage.login
POST    /login                  controllers.LoginWrapper.dispatch
GET     /logout                 securesocial.controllers.LoginPage.logout
GET     /signup/:token          securesocial.controllers.Registration.signUp(token)
POST    /signup/:token          securesocial.controllers.Registration.handleSignUp(token)
GET     /reset/:token           securesocial.controllers.Registration.resetPassword(token)
POST    /reset/:token           securesocial.controllers.Registration.handleResetPassword(token)
GET     /authenticate/:provider securesocial.controllers.ProviderController.authenticate(provider)
POST    /authenticate/:provider securesocial.controllers.ProviderController.authenticateByPost(provider)
GET     /not-authorized         securesocial.controllers.ProviderController.notAuthorized
